{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.1.1",
  "name": "Webflow UI Localization",
  "description": "Swap Webflow dashboard UI text for Japanese or Traditional Chinese translations.",
  "icons": {
    "16": "src/images/icon-16.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "src/images/icon-16.png",
      "48": "src/images/icon-48.png",
      "128": "src/images/icon-128.png"
    },
    "default_title": "Webflow UI Localization"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://webflow.com/dashboard*",
        "https://preview.webflow.com/*",
        "https://*.design.webflow.com/*"
      ],
      "js": [
        "src/content/scripts.ts"
      ],
      "run_at": "document_idle"
    }
  ]
}
